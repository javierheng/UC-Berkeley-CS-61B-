public class Main {
    public static void drawTriangle(int size){
        int a = 0 ;
        while(a < size){
            while(size - a > 0){
                System.out.print("*");
                a = a+1;
            }
            System.out.print("\n");
            a = 0;
            size = size - 1;
        }
    }

    public static void main(String[] args) {
        int x = 10;
        drawTriangle(x);

    }
}
